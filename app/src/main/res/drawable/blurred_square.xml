<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Bottom layer: Blurred background -->
    <item>
        <bitmap
            android:src="@drawable/profilepostbackground"
        android:gravity="center" />
    </item>

    <!-- Top layer: White square with border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF" /> <!-- Transparent color -->
            <stroke
                android:color="@android:color/white"
            android:width="1dp" /> <!-- Adjust the border width as desired -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as desired -->
        </shape>
    </item>
</layer-list>


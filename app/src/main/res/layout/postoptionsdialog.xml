<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/close_icon"
        android:elevation="4dp"
        android:id="@+id/closebtn"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:tint="?attr/paragraph2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/topbothroundcornersyellow"
        android:backgroundTint="?attr/curvedBackground2"

        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="20dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
android:layout_marginTop="10dp"
            android:fontFamily="@font/baloo_tamma_2_medium"
            android:text="What do you want to do?"
            android:textAlignment="center"
            android:textColor="?attr/paragraph2"
            android:textSize="17sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <com.google.android.material.button.MaterialButton
                android:id="@+id/whoisBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:backgroundTint="@android:color/transparent"
                android:text="Who is this person?"
                android:textAlignment="textStart"
                android:textColor="?attr/paragraph2"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="7dp"
                app:rippleColor="@color/navy" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:backgroundTint="@android:color/transparent"
                android:text="Delete post"
                android:textAlignment="textStart"
                android:textColor="?attr/paragraph2"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="7dp"
                app:rippleColor="@color/navy"
                app:strokeColor="@color/really_dark_navy" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reportBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/lato"
                android:backgroundTint="@android:color/transparent"
                android:text="Report post"
                android:textAlignment="textStart"
                android:textColor="?attr/paragraph2"
                android:textSize="12sp"
                android:textStyle="bold"
                app:cornerRadius="7dp"
                app:rippleColor="@color/navy"
                app:strokeColor="@color/really_dark_navy" />
        </LinearLayout>


    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
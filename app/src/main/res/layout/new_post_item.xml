<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="2dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/post_item_background"
            android:backgroundTint="?attr/postItemBackground"
            android:layout_margin="10dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/image_profile"
                        android:layout_margin="5dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="5dp"
                                android:textStyle="bold"
                                android:fontFamily="@font/baloo_tamma_2_medium"
                                android:id="@+id/username"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/yellow"/>

                            <ImageView
                                android:id="@+id/verifiedbadge"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:paddingTop="3dp"
                                android:src="@drawable/golden_microphone_verified_badge_pixel_art_8bit"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/author"
                            android:fontFamily="@font/lato"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"

                            android:textColor="?attr/paragraph2"
                            android:layout_marginStart="5dp"
                            />

                    </LinearLayout>
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/more"
                        android:visibility="visible"
                        android:layout_margin="5dp"
                        android:id="@+id/more"
                        app:tint="?attr/paragraph2"
                        android:rotation="90"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp">


                    <androidx.cardview.widget.CardView
                        android:id="@+id/imageCardview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="18dp"
                        app:cardCornerRadius="18dp"
                        card_view:cardElevation="0dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/postimage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"


                            android:adjustViewBounds="true"
                            android:maxHeight="500dp"
                            android:scaleType="centerCrop"
                            android:src="?attr/postitemLoadingImage"
                            app:cardCornerRadius="18dp" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/imageCardview"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="category"
                            android:textSize="12sp"
                            android:fontFamily="@font/lato"
                            android:id="@+id/category"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginEnd="20dp"
                            android:textColor="?attr/postItemCategoryColor"/>
                        <com.hendraanggrian.appcompat.widget.SocialTextView
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/lato"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:minHeight="50dp"

                            android:text="Loading..."


                            android:paddingBottom="10dp"
                            android:textColor="?attr/paragraph2"
                            android:textSize="14sp"
                            />


                    </LinearLayout>


                    <!--                <ImageView-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="0dp"-->
                    <!--                    app:layout_constraintDimensionRatio="1:1"-->
                    <!--                    android:id="@+id/post_image"-->
                    <!--                    tools:ignore="MissingConstraints" />-->

                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">



                            <ImageView
                                android:id="@+id/like"
                                android:padding="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/laughing"
                                app:tint="?attr/colorPrimaryVariant" />

                            <TextView
                                android:id="@+id/no_of_likes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                  android:textColor="?attr/paragraph2"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:fontFamily="@font/lato"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">



                            <ImageView
                                android:id="@+id/boo"
                                android:padding="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/bored"
                                app:tint="?attr/colorPrimaryVariant" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:id="@+id/no_of_boos"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:fontFamily="@font/lato"
                                android:textColor="?attr/paragraph2"/>



                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5dp"
                                android:src="@drawable/chat"
                                android:layout_toEndOf="@id/like"
                                android:layout_marginStart="10dp"
                                android:id="@+id/comment"
                                app:tint="?attr/colorPrimaryVariant" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:textSize="14sp"
                                android:layout_marginBottom="5dp"
                                android:id="@+id/no_of_comments"
                                android:fontFamily="@font/lato"
                                android:textColor="?attr/paragraph2"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">                           >

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:padding="5dp"
                                android:src="@drawable/save_instagram"
                                android:layout_toEndOf="@id/like"
                                android:layout_marginStart="10dp"
                                android:id="@+id/save"
                                app:tint="?attr/paragraph2" />

                        </LinearLayout>


                    </LinearLayout>



                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ago"
                    android:fontFamily="@font/lato"
                    android:id="@+id/timestamp"
                    android:textSize="12sp"
                    android:textColor="?attr/postItemCategoryColor"
                    android:layout_marginHorizontal="25dp"
                    android:layout_marginVertical="20dp"/>

                <!--            <LinearLayout-->
                <!--                android:layout_width="wrap_content"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginStart="10dp"-->
                <!--                android:layout_marginTop="10dp">-->
                <!--                <TextView-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:text="moments ago"-->
                <!--                    android:id="@+id/postTimeStamp"-->
                <!--                    android:fontFamily="@font/comfortaa"-->
                <!--                    />-->

                <!--            </LinearLayout>-->

            </LinearLayout>
        </RelativeLayout>



    <include layout="@layout/adview_layout"
        android:id="@+id/adLayout"
        android:visibility="gone"
        ></include>


</LinearLayout>





<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/optionPageBackground2"
    tools:context=".PermissionsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_medium"

        android:background="?attr/optionPageBackground2" />

    <!--    <TextView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:id="@+id/settings"-->
    <!--        android:text="@string/settings"-->
    <!--        android:textColor="@color/navy"-->
    <!--        android:layout_margin="10dp"-->
    <!--        android:textSize="18sp"/>-->








    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Microphone"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:fontFamily="@font/baloo_tamma_2_medium"
        android:textSize="16sp"
        android:textColor="?attr/paragraph2"
        android:paddingVertical="3dp"
        android:layout_marginHorizontal="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="?attr/optionButtonbackground2"
        android:padding="17dp"
        android:elevation="3dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp"


            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/microphone"
                app:tint="?attr/paragraph2"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/micpermissionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ask for permission to use the mic"
                android:textColor="?attr/paragraph2"
                android:fontFamily="@font/lato"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:textStyle="bold"
        android:paddingStart="5dp"
        android:textColor="?attr/paragraph2"
        android:paddingVertical="7dp"
        android:layout_marginHorizontal="20dp"
        android:visibility="invisible"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="?attr/optionButtonbackground2"
        android:padding="17dp"
        android:elevation="3dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="15dp"


            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/camera"
                app:tint="?attr/paragraph2"
                android:layout_marginEnd="20dp"
                />
            <TextView
                android:id="@+id/cameraPermissionBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ask for permission to use the camera"
                android:textColor="?attr/paragraph2"
                android:textStyle="bold"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>
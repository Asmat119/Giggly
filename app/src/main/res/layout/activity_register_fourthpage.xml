<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackground"
    tools:context=".RegisterSecondpageActivity">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="?attr/mainBackground"
        android:fontFamily="@font/raleway_medium"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back button on the left -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:paddingHorizontal="20dp"
            android:contentDescription="@string/signinText"

            android:src="@drawable/arrow_back_icon"
            app:tint="?attr/arrows2" />

        <!-- Register link on the right -->
        <TextView
            android:id="@+id/register_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginStart="30dp"
            android:paddingEnd="16dp"
            android:text="@string/signupText"
            android:textColor="?attr/paragraph2"
            android:textSize="17sp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/topbothroundcornersyellow"
        android:backgroundTint="?attr/curvedBackground2"
        android:orientation="vertical"
        android:paddingTop="30dp"
        android:paddingHorizontal="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thats it"
            android:fontFamily="@font/baloo_tamma_2_medium"
            android:textColor="?attr/paragraph2"
            android:textStyle="bold"
            android:textSize="35sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I just need you to create a password and your good to go!"
            android:fontFamily="@font/lato"
            android:textSize="27sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Dont worry I wont look."
            android:fontFamily="@font/lato"
            android:textSize="14sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            >
            <EditText
                android:id="@+id/passwordRegister"
                android:fontFamily="@font/lato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableTint="@color/yellow"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="?attr/editTextBackground2"
                android:textColorHint="?attr/editTextFont2"
                android:hint="Password"
                android:drawableLeft="@drawable/password_icon"
                android:inputType="textPassword"
                android:textSize="12sp"
                android:textColor="?attr/editTextFont2"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_weight="9"
                android:imeOptions="actionDone" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"

                android:id="@+id/showpasswordbtn1"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/hide"
                android:padding="13dp"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="?attr/editTextBackground2"

                android:layout_marginRight="3dp"
                app:tint="?attr/paragraph2" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <EditText
                android:id="@+id/passwordConfirmRegister"
                android:fontFamily="@font/lato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawableTint="@color/yellow"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="?attr/editTextBackground2"
                android:textColorHint="?attr/editTextFont2"
                android:hint="Confirm Password"
                android:drawableLeft="@drawable/password_icon"
                android:inputType="textPassword"
                android:textSize="12sp"
                android:textColor="?attr/editTextFont2"
                android:drawablePadding="10dp"
                android:padding="15dp"
                android:layout_weight="9"
                android:imeOptions="actionDone" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="50dp"

                android:id="@+id/showpasswordbtn2"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/hide"
                android:padding="13dp"
                android:tint="?attr/paragraph2"
                android:background="@drawable/edit_text_background"
                android:backgroundTint="?attr/editTextBackground2"

                android:layout_marginRight="3dp"/>

        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/buttons2"
        android:fontFamily="@font/baloo_tamma_2_medium"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="15dp"
        android:padding="15dp"
        android:text="Next"
        android:textColor="?attr/buttonsText2"
        android:textSize="15sp"
        android:textStyle="bold"
        app:cornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="@color/white" />





</androidx.constraintlayout.widget.ConstraintLayout>
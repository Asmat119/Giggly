<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"

        android:background="@drawable/dialog_bg2"
        android:backgroundTint="@color/yellow"

        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">




        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/delete_profile_giggly"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discard progress?"
            android:fontFamily="@font/baloo_tamma_2_medium"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This will remove all your lovely progress..."
            android:textColor="@color/black"
            android:textAlignment="center"
            android:fontFamily="@font/lato"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/acceptBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/baloo_tamma_2_medium"
                app:cornerRadius="7dp"
                android:layout_marginStart="5dp"
                android:backgroundTint="@android:color/transparent"
                android:textStyle="bold"
                android:text="Leave"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:rippleColor="@color/navy"
                app:strokeColor="@color/really_dark_navy" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                app:cornerRadius="7dp"
                android:fontFamily="@font/baloo_tamma_2_medium"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:textStyle="bold"
                android:text="Stay"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:rippleColor="@color/navy"
                app:strokeColor="@color/really_dark_navy" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/dialog_bg2"
        android:backgroundTint="@color/yellow"
        android:elevation="10dp"
        android:padding="15dp"
        android:src="@drawable/attention"

        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:tint="@color/black" />



</androidx.constraintlayout.widget.ConstraintLayout>
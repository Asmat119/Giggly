    <!--        android:id="@+id/settings"-->
    <!--        android:text="@string/settings"-->
    <!--        android:textColor="@color/navy"-->
    <!--        android:layout_margin="10dp"-->
    <!--        android:textSize="18sp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
android:layout_below="@id/toolbar"
        android:paddingVertical="20dp"
        android:id="@+id/profileimagelayout"

        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/no_profile_image"
            android:layout_gravity="center"

            android:id="@+id/image_profile"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="usernamehere"
            android:fontFamily="@font/baloo_tamma_2_medium"

            android:layout_gravity="center"
            android:id="@+id/username"
            android:textStyle="bold"
            android:textColor="?attr/paragraph2"
            android:textSize="20sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/whycollectinfo"
        android:layout_below="@id/profileimagelayout"
        android:text="@string/whycollectinfo"
        android:textAlignment="center"
        android:paddingBottom="20dp"
        android:layout_marginHorizontal="5dp"
        android:fontFamily="@font/lato"
        android:textSize="14sp"
        android:paddingHorizontal="15dp"
        android:textColor="?attr/paragraph2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/joindate"
        android:layout_below="@+id/whycollectinfo"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:elevation="3dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/calender_cion"
        android:drawablePadding="20dp"
        android:paddingVertical="10dp"
        android:background="@drawable/biotextbackground"
        android:backgroundTint="?attr/optionButtonbackground2"
        android:drawableTint="@color/black">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/calender_cion"
            android:layout_marginStart="15dp"
            android:layout_gravity="center_vertical"
            app:tint="?attr/paragraph2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView


                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textStyle="bold"
                android:fontFamily="@font/baloo_tamma_2_medium"
                android:text="Date Joined (Day, Month, Year)"
                android:paddingHorizontal="15dp"
                android:paddingVertical="0dp"

                android:textColor="?attr/paragraph2"
                android:textSize="15sp" />
            <TextView

android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:fontFamily="@font/lato"
                android:text="12/07/2023"
                android:paddingHorizontal="15dp"
                android:paddingVertical="0dp"

                android:textColor="?attr/paragraph2"
                android:textSize="15sp" />

        </LinearLayout>
    </LinearLayout>







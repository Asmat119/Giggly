<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"

        android:background="@drawable/dialog_bg2"

        android:backgroundTint="@color/yellow"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp">

        <!--        <ImageButton-->
        <!--            android:id="@+id/cancelBtn"-->
        <!--            android:layout_width="30dp"-->
        <!--            android:layout_height="30dp"-->
        <!--            android:layout_gravity="end|top"-->
        <!--            android:layout_margin="10dp"-->
        <!--            android:background="@android:color/transparent"-->
        <!--            android:src="@drawable/close_icon"-->
        <!--            app:tint="@color/black" />-->


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:src="@drawable/yellow_and_black_cartoon_for_an_app_update_available"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update Available!"


            android:fontFamily="@font/baloo_tamma_2_medium"
            android:textColor="@color/black"
            android:textSize="24sp"

            android:textAlignment="center"
            android:layout_marginBottom="10dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="There is an update available, go to the app store now!"
            android:textColor="@color/black"
            android:textAlignment="center"

            android:fontFamily="@font/lato"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="5dp">



            <com.google.android.material.button.MaterialButton
                android:id="@+id/acceptBtn"
                style="@style/Widget.Material3.Button.TonalButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_marginStart="5dp"
                android:textStyle="bold"
                app:cornerRadius="7dp"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/baloo_tamma_2_medium"
                android:text="Go"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:rippleColor="@color/black"
                app:strokeColor="@color/really_dark_navy" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/dialog_bg2"

        android:backgroundTint="@color/yellow"

        android:padding="13dp"
        android:src="@drawable/attention"


        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.AddImageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/optionPageBackground2">



            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="?attr/optionPageBackground2"
                android:id="@+id/toolbar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:drawableLeft="@drawable/arrow_back_icon"
                        android:drawableTint="?attr/paragraph2"
                        android:id="@+id/back"
                         />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:fontFamily="@font/baloo_tamma_2_medium"
                        android:textColor="?attr/paragraph2"
                        android:layout_toStartOf="@+id/zzz"
                        android:layout_toEndOf="@+id/back"

                        android:gravity="center"
                        android:text="Add image" />




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:backgroundTint="@color/white"
                        android:elevation="10dp"
                        android:id="@+id/zzz"
                        android:fontFamily="@font/raleway_medium"
                        android:textSize="18sp"
                        android:layout_alignParentEnd="true"
                        android:drawableEnd="@drawable/pointing_right_arrow"
                        android:drawableTint="@color/black"
                        android:drawablePadding="10dp"
                        android:layout_marginRight="15dp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"/>


                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/toolbar"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/selectedImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7" />

            <ImageView

                android:layout_gravity="left"
                android:layout_marginStart="20dp"
                android:layout_width="200dp"

                android:layout_height="0dp"
                android:layout_weight="3"

                android:src="@drawable/clickhere__1__removebg_preview"
                android:id="@+id/tutorialimage"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gallery"
                    android:textStyle="bold"
                    app:cornerRadius="7dp"
                    android:id="@+id/choosePic"
                   android:backgroundTint="?attr/optionButtonbackground2"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/baloo_tamma_2_medium"
                    android:textColor="?attr/paragraph2"
                   />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next"
                    android:textStyle="bold"
                    app:cornerRadius="7dp"
                    android:id="@+id/next_page1"
                    android:layout_margin="15dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/baloo_tamma_2_medium"
                    android:backgroundTint="@color/yellow"/>
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</FrameLayout>